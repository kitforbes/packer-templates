{
  "builders": [
    {
      "name": "test",
      "type": "hyperv-iso",
      "http_directory": "scripts",
      "output_directory": "{{ user `output_dir` }}/{{ user `os_name` }}-2-hyperv/",
      "vm_name": "{{ user `os_name` }}-2",
      "iso_url": "{{ user `output_dir` }}/{{ user `os_name` }}-1-hyperv/Virtual Hard Disks/{{ user `os_name` }}-1.vhdx",
      "iso_checksum_type": "none",
      "communicator": "winrm",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "12h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "1h",
      "floppy_files": [
        "floppy/utilities.ps1"
      ],
      "cpu": 1,
      "disk_size": 81920,
      "ram_size": 4096,
      "differencing_disk": true,
      "skip_export": true,
      "generation": 1,
      "boot_wait": "0s",
      "boot_command": []
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/install_powershell.ps1",
      "destination": "C:\\Windows\\Temp\\install_powershell.ps1"
    },
    {
      "type": "windows-shell",
      "inline": [
        "@echo off",
        "cmd.exe /c powershell.exe -File C:\\Windows\\Temp\\install_powershell.ps1"
      ],
      "environment_vars": [
        "PACKER_VERBOSE={{ user `verbose` }}"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "windows-shell",
      "inline": [
        "@echo off",
        "echo ==^> PowerShell Version information...",
        "powershell -Command \"$PSVersionTable.PSVersion; $psVersion = $PSVersionTable.PSVersion.ToString().Split('.')[0..1] -Join '.'; if ($psVersion -ne '5.1') { exit 1 } else { exit 0 }\"",
        "exit /B %ERRORLEVEL%"
      ]
    },
    {
      "type": "powershell",
      "script": "scripts/update_powershell_environment.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "environment_vars": [
        "PACKER_VERBOSE={{ user `verbose` }}"
      ]
    },
    {
      "type": "powershell",
      "script": "scripts/install_windows_updates.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "environment_vars": [
        "PACKER_VERBOSE={{ user `verbose` }}",
        "PACKER_NO_UPDATES={{ user `no_updates` }}"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "script": "scripts/install_windows_updates.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "environment_vars": [
        "PACKER_VERBOSE={{ user `verbose` }}",
        "PACKER_NO_UPDATES={{ user `no_updates` }}"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "script": "scripts/install_windows_updates.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "environment_vars": [
        "PACKER_VERBOSE={{ user `verbose` }}",
        "PACKER_NO_UPDATES={{ user `no_updates` }}"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    },
    {
      "type": "powershell",
      "script": "scripts/install_windows_updates.ps1",
      "elevated_user": "vagrant",
      "elevated_password": "vagrant",
      "environment_vars": [
        "PACKER_VERBOSE={{ user `verbose` }}",
        "PACKER_NO_UPDATES={{ user `no_updates` }}"
      ]
    },
    {
      "type": "windows-restart",
      "restart_timeout": "1h"
    }
  ],
  "post-processors": [],
  "variables": {
    "os_name": "",
    "iso_checksum": "",
    "iso_checksum_type": "",
    "iso_url": "",
    "no_updates": "",
    "output_dir": "output",
    "verbose": ""
  }
}
