root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,xaml,xml,yaml,yml}]
indent_size = 2

[*.rb]
indent_size = 2

[*{Berks,Rake,Vagrant}file]
indent_size = 2

[*.sh]
indent_size = 2

[*{bat,cmd,ps1,psd1,psm1}]
indent_size = 4
end_of_line = crlf
